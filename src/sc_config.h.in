#ifndef SC_CONFIG_H
#define SC_CONFIG_H 1


/* Define to the full name of this package. */
#define SC_PACKAGE_NAME "@package@"

/* Define to the full name and version of this package. */
#define SC_PACKAGE_STRING "@package@ @version@"

/* Define to the version of this package. */
#define SC_PACKAGE_VERSION "@version@"

/* Version number of package */
#define SC_VERSION "@version@"

/* Package major version */
#define SC_VERSION_MAJOR @version_major@

/* Package minor version */
#define SC_VERSION_MINOR @version_minor@

/* Package point version */
#define SC_VERSION_POINT @version_revision@

/* C compiler */
#define SC_CC "@cc@"

/* C compiler flags */
#define SC_CFLAGS "@cflags@"

/* C preprocessor */
#define SC_CPP "@cpp@"

/* C preprocessor flags */
#define SC_CPPFLAGS "@cppflags@"

/* Linker flags */
#define SC_LDFLAGS "@ldflags@"

/* Libraries */
#define SC_LIBS "@libs@"

/* F77 compiler flags */
#define SC_FFLAGS @fflags@

/* Define to a macro mangling the given C identifier (in lower and upper
   case), which must not contain underscores, for linking with Fortran. */
#ifndef SC_F77_FUNC
#define SC_F77_FUNC(name,NAME) name ## _
#endif

/* As F77_FUNC, but for C identifiers containing underscores. */
#ifndef SC_F77_FUNC_
#define SC_F77_FUNC_(name,NAME) name ## _
#endif


// TODO: set from meson.build
#define SC_SIZEOF_VOID_P 8
#define SC_MEMALIGN_BYTES (SC_SIZEOF_VOID_P)

// replace array/dmatrix resize with malloc/copy/free
#define SC_ENABLE_USE_REALLOC 1


/* Define to the equivalent of the C99 'restrict' keyword, or to
   nothing if this is not supported.  Do not define if restrict is
   supported directly.  */
#define _sc_restrict __restrict

